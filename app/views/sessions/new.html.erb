<div class="container">
<!-- Rajouter un message d'erreur -->
<div>
  <% if flash[:danger] %>
    <div class="alert alert-danger" role="alert">
      <p id=danger> <%=  flash[:danger] %></p>
    </div>
  <% end %>
</div>

  <h1>Se connecter</h1>
  <div>
    <%= form_tag url_for(action: 'create'), method: "post" do %>
        <div><%= label_tag 'Entre ton email :' %></div>
        <div><%= text_field_tag 'email', @email, class: "form-control" %></div>
        <div><%= label_tag 'Tape ton mot de passe :' %></div>
        <div><%= password_field_tag 'password', @p, class: "form-control"  %></div>
        <%= submit_tag "Connexion", class: "btn btn-secondary"%>
    <% end %>
  </div>
</div> 