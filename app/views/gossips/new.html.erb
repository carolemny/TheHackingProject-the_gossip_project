<div class="container">
  <% if @gossip.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <p >We failed to create the gossip for the following reason(s) :</p>
      <ul>
       <% @gossip.errors.full_messages.each do |message| %>
          <li><%= message %></li>
       <% end %>
      </ul>
    </div>
  <% end %>

  <h1>Cr√©er un Potin</h1>
  <div>
    <%= form_tag url_for(action: 'create'), method: "post" do %>
        <div><%= label_tag 'Quel est le titre de ton potin ?' %></div>
        <div><%= text_field_tag 'title', @gossip.title, class: "form-control" %></div>
        <div><%= label_tag 'Balance ton potin :' %></div>
        <div><%= text_area_tag 'content', @gossip.content, class: "form-control"  %></div>
        <%= submit_tag "C'est parti...", class: "btn btn-secondary"%>
    <% end %>
  </div>
</div>